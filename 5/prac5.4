using namespace std;
int sum(int a,int b)//сложение целых чисел
{
	return a + b;
}
double sum(double a, double b)//сложение дробных чисел
{
	return a + b;
}
int min(int a, int b)//вычитание целых чисел
{
	return (a - b);
}
double min(double a, double b)//вычитание дробных чисел
{
	return a - b;
}
int multiply(int a, int b)//умножение целых чисел
{
	return a * b;
}
double multiply(double a, double b)//умножение дробных чисел
{
	return a * b;
}
int divide(int a, int b)//деление целых чисел
{
	if (b != 0)
		return a / b;
	else
	{
		cout << "Division by zero" << endl;
		return -1;
	}
		
}
double divide(double a, double b)//деление дробных чисел
{
	if (b != 0)
		return a / b;
	else
	{
		cout << "Division by zero" << endl;
		return -1;
	}
}
