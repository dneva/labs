	SetConsoleOutputCP(1251);//ввод на русском
	Gropup_S g;//определение объекта класса Gropup_S
	string n, s, m;
	int ma[5];
	cout << "Введите имя студента" << endl;
	getline(cin,n);
	cout << "Введите фамилию студента" << endl;
	getline(cin, s);
	cout << "Введите отчество студента" << endl;
	getline(cin, m);
	cout << "Введите оценки" << endl;
	for (int i = 0; i < 5; i++) cin >> ma[i];
	g.define(n,s,m,ma);//вызов метода define()	
	g.display();//вызов метода display
	system("pause");
	return 0;
}
